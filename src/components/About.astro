---
import { getAnchor } from "../i18n/anchors";
import BtnLayout from "./BtnLayout.astro";
import { gsap } from 'gsap';

const { lang } = Astro.params;
const { translations } = Astro.props;
---

<section>
    <div class="about-container" id={getAnchor(lang, 'about')}>
      <div class="logo-animate-container">
        <picture class="logo-container">
            <img src={translations.about.logo} alt={translations.about.alt_logo} loading="lazy">
        </picture>
      </div>
      <div class="content-about-container">
          <div class="logo-section">
              <picture class="melo-img-container">
                  <img src="/img/about.svg" alt={translations.about.alt_img} loading="lazy">
              </picture>
          </div>
          <div class="content-about">
              <h2 class="animate-text">{translations.about.title}</h2>
              {translations.about.paragraphs.map((paragraph, index) => (
                  <p class="animate-text" style={`--delay: ${0.2 + index * 0.1}s`}>{paragraph}</p>
              ))}
              <BtnLayout href="https://www.instagram.com/melojoyeria/" text={translations.about.btn_cta} color="var(--golden-sand)" class="animate-text" style="--delay: 0.5s" />
          </div>
      </div>
    </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  document.addEventListener('DOMContentLoaded', () => {
    // Registrar plugin si es necesario
    if (typeof ScrollTrigger !== 'undefined') {
      gsap.registerPlugin(ScrollTrigger);
    }
    
    const aboutSection = document.getElementById('about');
    if (!aboutSection) return;
    
    // Animación para el logo
    gsap.from('.logo-container', {
      x: -100,
      opacity: 0,
      duration: 1,
      ease: "power2.out",
      scrollTrigger: {
        trigger: aboutSection,
        start: "top 80%",
        once: true
      }
    });
    
    // Animación para textos
    gsap.utils.toArray('.animate-text').forEach((text, i) => {
      gsap.from(text, {
        y: -50,
        opacity: 0,
        duration: 0.8,
        delay: i * 0.1,
        ease: "back.out(1.2)",
        scrollTrigger: {
          trigger: aboutSection,
          start: "top 80%",
          once: true
        }
      });
    });

    // Animación para la imagen
    gsap.from('.melo-img-container', {
      scale: 0.95,
      opacity: 0,
      duration: 1.2,
      ease: "power2.out",
      scrollTrigger: {
        trigger: aboutSection,
        start: "top 80%",
        once: true
      }
    });
  });
</script>

<style>
section{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
    padding: 60px 10px;
    background: linear-gradient(180deg, rgba(250, 244, 239, 0.6) 0%, rgba(230, 203, 168, 0.6) 49.77%);
}

.about-container{
    max-width: 1240px
}

.logo-container {
  display: block;
  margin: 0 auto;
  width: 100%; 
  max-width: 250px; 
  height: auto;
}

.logo-container img {
  width: 100%;
  height: auto;
}
.content-about-container{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 30px;
    width: 100%;
}

.logo-section{
    display: flex;
    justify-content: center;
    flex: 1;
}

.melo-img-container {
  max-width: 500px;
  width: 100%;
  height: auto;
}

.melo-img-container img {
  width: 100%;
  height: auto;
  object-fit: cover; 
  border-radius: 8px;
}

.content-about{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
    flex: 1;
    gap: 20px;
}

p{
    margin: 0;
    width: 90%;
    font-size: clamp(1rem, 0.9825rem + 0.0877vw, 1.125rem);
}

@media(width > 659px) {
    .content-about-container{
        flex-direction: row;
        padding-top: 60px;
    }
}

</style>