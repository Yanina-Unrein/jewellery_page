---
import Spinner from "../components/Spinner.astro";

const { lang = 'es', translations = {} } = Astro.props;
const seo = translations.seo || { title: "Default Title", description: "", keywords: "" };
const canonicalUrl = new URL(Astro.url.pathname, 'https://tudominio.com').toString();

---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={seo.description} />
		<meta name="keywords" content={seo.keywords} />
		<link rel="canonical" href={canonicalUrl} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<title>{seo.title}</title>
	</head>
	<body>
		<div id="spinner-wrapper">
			<Spinner size="200px" speed="3s" />
		  </div>
		<slot />
		<script>
			let isLoading = true;
			
			setTimeout(() => {
			  isLoading = false;
			  const spinnerWrapper = document.getElementById('spinner-wrapper');
			  if (spinnerWrapper) {
				spinnerWrapper.style.display = 'none'; 
			  }
			}, 3000);
		  </script>
	</body>
</html>

<style is:global>
    :root {
      /* ðŸŽ¨ Colores */
	  	--golden-sand: #C3A776; 
		--linen: #EDE0D4;        
		--coffee-brown: #89644C; 
		--beige: #F8F5F2;
		--walnut: #5A4A42;      
		--black: #333333;
		--white: #ffffff;

      --font-primary: 'Roboto', sans-serif;
      --font-secondary: 'Poppins', sans-serif;
    }

	html,
    body {
      font-family: var(--font-primary);
      margin: 0;
      padding: 0;
	  box-sizing: border-box;
    }

	h2{
		font-family: var(--font-secondary);
		font-size: clamp(1.5rem, 1.4309rem + 0.6579vw, 2.5rem);
		margin: 0;
	}
	
	::-webkit-scrollbar {
		width: 10px;
	}

	::-webkit-scrollbar-track {
		background: var(--beige);
		border-radius: 5px;
	}

	::-webkit-scrollbar-thumb {
		background: var(--coffee-brown);
		border-radius: 5px;
		border: 2px solid var(--linen);
	}

	::-webkit-scrollbar-thumb:hover {
		background: var(--golden-sand);
	}
	html {
		scrollbar-color: var(--coffee-brown) var(--beige);
		scrollbar-width: thin;
	}
</style>
