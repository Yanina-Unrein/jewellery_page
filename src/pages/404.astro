---
import Layout from '../layouts/Layout.astro';
import { defaultLang, loadTranslations } from "../i18n/ui";
import BtnLayout from '../components/BtnLayout.astro';

const translations = loadTranslations(defaultLang);
---

<Layout translations={translations} title={translations.notFound.title}>
  <main class="not-found-container">
    <div class="not-found-content">
      <div class="error-code">{translations.notFound.title}</div>
      <h1 class="subtitle">{translations.notFound.subTitle}</h1>
      <p class="message">
        {translations.notFound.paragraph}
      </p>
      <div class="action">
        <BtnLayout 
          text={translations.notFound.btn} 
          href="/" 
          color="var(--golden-sand)"
          class="btn-404"
        />
      </div>
    </div>
    <div class="illustration">
      <img 
        src="/img/escaparate.svg" 
        alt="Ilustraci칩n p치gina no encontrada" 
        width="500" 
        height="500"
        loading="eager"
      />
    </div>
  </main>
</Layout>

<style>
  .not-found-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
    background: var(--linen);
    gap: 2rem;
  }

  .not-found-content {
    text-align: center;
    max-width: 600px;
  }

  .error-code {
    font-size: 6rem;
    font-weight: 700;
    color: var(--golden-sand);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 2rem;
    color: var(--coffee-brown);
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .message {
    font-size: 1.25rem;
    color: var(--walnut);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .btn-404 {
    margin-top: 1.5rem;
  }

  .illustration img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  @media (min-width: 768px) {
    .not-found-container {
      flex-direction: row;
      gap: 4rem;
      padding: 4rem;
    }

    .not-found-content {
      text-align: left;
    }

    .error-code {
      font-size: 8rem;
    }

    .subtitle {
      font-size: 2.5rem;
    }
  }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
      if (typeof gsap !== 'undefined') {
        // Efecto de joya perdida
        gsap.from('.error-code', {
          scale: 0.5,
          opacity: 0,
          duration: 1.2,
          ease: "elastic.out(1, 0.5)"
        });
        
        // Efecto de texto apareciendo
        gsap.from('.subtitle', {
          y: -30,
          opacity: 0,
          duration: 0.8,
          delay: 0.3,
          ease: "power2.out"
        });
        
        // Efecto de mensaje con brillo
        gsap.from('.message', {
          rotation: -5,
          opacity: 0,
          duration: 1,
          delay: 0.6,
          ease: "back.out(2)"
        });
        
        // Efecto bot칩n como joya que aparece
        gsap.from('.btn-404', {
          y: 20,
          opacity: 0,
          duration: 0.7,
          delay: 0.9,
          ease: "bounce.out"
        });
        
        // Efecto ilustraci칩n
        gsap.from('.illustration', {
          scale: 0.8,
          opacity: 0,
          duration: 1.5,
          delay: 0.4,
          ease: "power3.out"
        });
      }
    });
  </script>