---
const { size = "100px", speed = "1.5s" } = Astro.props;
---

<div class="spinner-container">
    <img 
        src="/iconLogo/logo_gold_completo.svg" 
        alt="Cargando..." 
        class="logo-spinner"
        style={`width: ${size}; height: ${size};`}
    />
</div>

<style>
    .spinner-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .logo-spinner {
        animation: spin ${speed} linear infinite;
    }
  
    @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
</style>