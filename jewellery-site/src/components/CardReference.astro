---
const { altimg, image } = Astro.props;
---

<div class="card">
  <img src={image} alt={altimg} loading="lazy" />
</div>

<style>
   .card {
    flex: 0 0 auto;
    scroll-snap-align: center;
    text-align: center;
    background: var(--white);
    border-radius: 10px;
    padding: 1rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .card img {
    width: 230px;
    height: 260px;
    object-fit: cover;
    border-radius: 8px;
  }

  @media (min-width: 501px) {
    .card img {
      width: 360px;
      height: 400px;
    }
  }
</style>